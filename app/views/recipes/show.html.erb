<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-12">
  <!-- <strong>Title:</strong> -->
    <h1><%= @recipe.title %></h1>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
  <strong>Image:</strong>
    <h1><% @recipe.images.each_with_index do |image, index| %>
      <%= image_tag(image.url) %>
      <% end %>
    </h1>
  </div>

  <div class="col-md-6">
  <strong>Ingredients:</strong>
    <h1>
      <ul class="list-group">
        <li class="list-group-item"><%= @recipe.ingredients %></li>
      </ul>
    </h1>
  </div>
</div>


<div class="row">
  <div class="col-md-12">
  <strong>Method:</strong>
    <h1>
      <ul class="list-group">
        <li class="list-group-item"><%= @recipe.method %></li>
      </ul>
    </h1>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
  <strong>Time</strong>
    <h1><%= @recipe.time %></h1>
  </div>
</div>


<div class="row">
  <div class="col-md-12">
  <strong>User:</strong>
    <h1><%= @recipe.user.first_name %> <%= @recipe.user.last_name %></h1>
  </div>
</div>


<div class="row">
  <div class="col-md-12">
  <% if @recipe == current_user %>
  <li><%= link_to 'Edit', edit_recipe_path(@recipe) %></li>
  <li><%= link_to 'Destroy', @recipe, method: :delete, data: { confirm: 'Are you sure?' } %></li>
  <% end %>
  </div>
</div>


















































  <div class="row">
    <div class="col-md-6">
     <h1><%= link_to image_tag(@user.profile_image.thumb.url, class: "user-image"), @user.profile_image.url %></<h1> 
    </div>
  </div>

  

  <div class="row">
    <div class="user-show">
    <div class="col-md-3">
    <div class="user-show-image">
      <h1><%= @user.username %></h1>
      </div>
    </div>

    <div class="col-md-3">
      <h1><%= @user.email %></h1>
    </div>

    <div class="col-md-3">
      <h1><%= @user.role %></h1>
    </div>


    <div class="col-md-3">
      <% if @user == current_user %>
      <button type="button" class="btn btn-info">
           <%= link_to 'Edit', edit_user_path(@user) %></button>

      <button type="button" class="btn btn-info">
      <%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %></button>

      
      <% end %>
    </div>

    
    



    <div class="row">
      <%= render @user.recipes %>
    </div> 

    <hr>




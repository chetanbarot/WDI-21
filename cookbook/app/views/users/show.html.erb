  <div class="row">
    <div class="col-md-12">
      <h1><%= @user.username %></h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <h1><%= link_to image_tag(@user.profile_image.thumb.url), @user.profile_image.url %></h1>
    </div>

    <div class="col-md-3">
      <h1><%= @user.email %></h1>
      <h1><%= @user.role %></h1>
    </div>

    <div class="col-md-3">
    <% if @user == current_user %>
    <li><%= link_to 'Edit', edit_user_path(@user) %></li>
    <li><%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %></li>
    <% end %>
    </div>
  </div>

    <div class="row">
      <%= render @user.recipes %>
    </div>



